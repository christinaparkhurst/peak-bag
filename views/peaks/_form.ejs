<div class="form-group">
  <label for="elevation">Elevation (ft)</label>
  <input type="text"
         class="form-control"
         name="elevation"
         value="<%= peak.elevation %>">
</div>

<div class="form-group">
  <label for="date">Date Summitted</label>
  <input type="text"
         class="form-control"
         name="date"
         value="<%= peak.date %>">
</div>

<div class="form-group">
  <label for="comment">Notes:</label>
  <textarea
         class="form-control"
         rows="5"
         name="notes"
         value="<%= peak.notes %>">
  </textarea>
</div>
