
<div class="form-group">
  <label for="summited">Summited?</label>
  <input type="checkbox"
         class="form-control"
         name="completed"
         <%= peak.summitted ? 'checked' : '' %> >
</div>

<div class="form-group">
  <label for="name">Peak Name</label>
  <input type="text"
         class="form-control"
         name="name"
         value="<%= peak.name %>">
</div>

<div class="form-group">
  <label for="latitude">Latitude</label>
  <input type="text"
         class="form-control"
         name="latitude"
         value="<%= peak.latitude %>">
</div>

<div class="form-group">
  <label for="longitude">Longitude</label>
  <input type="text"
         class="form-control"
         name="longitude"
         value="<%= peak.longitude %>">
</div>

